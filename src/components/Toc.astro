---
import { MarkdownHeading } from 'astro/dist/types/public';

interface Props {
    headings: MarkdownHeading[];
}

const { headings } = Astro.props;

const toc = headings.filter((h) => h.depth > 1 && h.depth <= 5);

const marginMap: Record<number, string> = {
    2: "ml-0",
    3: "ml-4",
    4: "ml-8",
    5: "ml-12",
}
---

{
    toc.length > 0 && (
        <nav class="p-6 rounded-3xl bg-white drop-shadow-xl drop-shadow-black/10 sticky top-24">
            <div class="mb-2">
                <p class="text-lg font-bold tracking-wider">Table Of Content</p>
            </div>
            <div class="mb-3 w-full h-px border border-dashed border-gray-200"></div>
            <ul class="space-y-3">
                {toc.map((heading) => (
                    <li class={heading.depth === 2 ? "text-gray-800" : `text-gray-600 ${marginMap[heading.depth]}`}>
                        <a href={`#${heading.slug}`}>{heading.text}</a>
                    </li>
                ))}
            </ul>
        </nav>
    )
}